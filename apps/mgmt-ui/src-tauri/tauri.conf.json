{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Chip Tycoon",
  "identifier": "com.chiptycoon.mgmt",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../web/dist",
    "beforeBuildCommand": "pnpm --dir ../web install && pnpm --dir ../web build"
  },
  "app": {
    "windows": [
      {
        "title": "Chip Tycoon",
        "width": 1280,
        "height": 800
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
